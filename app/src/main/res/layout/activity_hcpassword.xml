<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HCPassword">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="자주 묻는 질문"
            android:letterSpacing="0.02"
            android:textColor="@color/black"
            android:textSize="17dp"/>

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/icon_arrow_back"
            tools:layout_editor_absolutX="20dp"
            tools:layout_editor_absoluteY="8dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_Menu">

            <TextView
                android:id="@+id/alarm_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/layout"
                android:layout_marginTop="30dp"
                android:layout_weight="2"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:text="계정 비밀번호는 어떻게 바꾸나요?"/>

        <View
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_sub"
            app:layout_constraintBottom_toBottomOf="@id/layout_third"
            android:background="@drawable/border_no_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="1) [마이페이지]-[계정 설정]-[비밀번호 변경]"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:text="2) 새로운 비밀번호를 입력하고 확인을 누르면 변경됩니다."/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>