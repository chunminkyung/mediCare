<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyLoginIdCheck">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="아이디 수정"
            android:letterSpacing="0.02"
            android:textColor="@color/black"
            android:textSize="17dp"/>

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/icon_arrow_back"
            tools:layout_editor_absolutX="20dp"
            tools:layout_editor_absoluteY="8dp"/>

        <TextView
            android:id="@+id/page_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:text="저장"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_Menu"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 아이디"
            android:paddingLeft="15dp"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/toolbar_Menu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="00000@baewha.com"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textColor="#808080"
            android:background="@drawable/edittext_color_box"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_Menu"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_color_box"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:hint="수정할 아이디를 입력하세요"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>