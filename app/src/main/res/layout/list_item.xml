<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingClass,MissingConstraints"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="75dp"
        android:layout_width="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/icon_medicine"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:id="@+id/imageView"/>
    <!--android:background="@mipmap/ic_launcher" -->

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:id="@+id/fillName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/fillInfo"
        app:layout_constraintEnd_toEndOf="@+id/fillName"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fillName"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fillNumber"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fillCount"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fillCount2"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/fillName"
        app:layout_constraintEnd_toEndOf="@+id/fillName"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@+id/fillInfo"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fillmorning"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/filllunch"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fillevening"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>